doctype html
html(lang='en')
head
    meta(charset='utf-8')
    if title
        title= title
    else
        title Cell tracking visualisation framework
    block styles
        link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
        link(rel='stylesheet', type='text/css', href='/css/semantic.min.css')
        link(rel='stylesheet', type='text/css', href='/css/master.css')
    block scripts
        script(type='text/javascript', src='/js/jquery-1.9.1.js')
        script(type='text/javascript', src='/js/semantic.min.js')
        script(type='text/javascript', src='/js/master.js')
body
    .ui.fixed.transparent.inverted.main.menu
        .container
            a.item(href='/')
            | Cell tracking visualisation
            a.item(href='/')
                i.home.icon
                | Home
            a.item(href='/upload')
                i.attachment.icon
                | Upload
            a.item(href='/experiments')
                i.lab.icon
                | Experiments
            a.right.floated.item(href='/')
                i.question.icon
                | About
    .content.ui.page.grid
        block content
